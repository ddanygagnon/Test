{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "forceConsistentCasingInFileNames": true,
        "rootDir": "src",
        "outDir": "lib"
    },
    "exclude": ["node_modules", "lib"]
}
